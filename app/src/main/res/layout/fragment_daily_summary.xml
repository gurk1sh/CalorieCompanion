<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="se.umu.cs.guth0028.caloriecompanionapp.DailySummaryViewModel"/>
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/CaloriesEaten"
            style="@style/circleButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="@{viewModel.caloriesEaten}"
            tools:text="Calories \n Eaten"
            android:layout_gravity="start|center" />

        <Button
            android:id="@+id/CaloriesLeft"
            style="@style/circleButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="@{viewModel.caloriesLeft}"
            tools:text="Calories \n Left"
            android:layout_gravity="center" />

        <Button
            android:id="@+id/CaloriesBurned"
            style="@style/circleButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="@{viewModel.caloriesBurned}"
            tools:text="Calories \n Burned"
            android:layout_gravity="end|center" />
    </FrameLayout>
</layout>